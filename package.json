{
  "name": "fintrack",
  "version": "1.0.0",
  "description": "Transaction management application",
  "main": "index.js",
  "engines": {
    "node": ">=18.19.0"
  },
  "nodemonConfig": {
    "ignore": [
      "client/public/images",
      "node_modules"
    ]
  },
  "scripts": {
    "start": "node index.js",
    "dev:server": "nodemon --ignore './client/' --exec 'node --max-old-space-size=8192 index.js' --signal SIGTERM",
    "dev:client": "cd client && npm start",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "update-db": "node utilities/simplefin_sync.js",
    "backup-db": "node utilities/backup.js"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "knex": "^3.1.0",
    "mysql2": "^3.9.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  }
}
